{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/lib/auth.js",
    "src/store/slices/connectPlugWalletSlice.js",
    "src/lib/auth.js"
, "src/components/cutomeEditor/Editor.tsx", "src/components/CustomCountryandRegion/CountrySelect.jsx", "RedirectsRoutes.js", "src/app/connect/ledger.ts", "src/app/connect/plug.ts", "src/app/sitemap/index.js", "src/app/sitemap.xml.js", "next-sitemap.config.js", "middleware.js", "middleware.ts11", "src/app/web3-directory/[category]/layout.tsx11"  ],
  "exclude": ["node_modules"],
  "moduleResolution": ["node_modules", ".next", "node"]
}

